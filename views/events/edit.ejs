<% include ../partials/header %>

<div class="mt-5 container">
    <div class="row">
        <div style="width: 72%; margin: 5px auto;">
            <h1 class="text-center mb-3"><%= event.title %></h1>
            <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="text-center form-control" name="event[title]" placeholder="title of your EVENT..." autocomplete="off" value="<%= event.title %>" required>
                </div>

                <div class="form-group">
                    <textarea class="form-control border-info " rows="13" cols="49"name="event[description]" placeholder="Description of your Event..."><%= event.description %></textarea> 
                </div>
                
                <div class="input-group pb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                    </div>
                    <input type="date" required autocomplete="off"placeholder="Date of the event..."class="text-center form-control" name="event[date]" value="<%= event.date %>">
                </div>
                
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-link"></i></span>
                    </div>
                    <input type="text" autocomplete="off"placeholder="(optional) Event image url..."class="text-center form-control" name="event[image]" value="<%= event.image %>">
                </div>
               
                    <div class="text-center">
                        <img class="mt-4 mb-4 rounded img-fluid" width="50%"src="<%=event.image%>">
                    </div>
                
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-compass"></i></span>
                    </div>
                    <input type="text" autocomplete="off"placeholder="Enter location for the event..."class="text-center form-control" name="event[location]" required value="<%= event.location %>">
                </div>
                
                <div class="input-group pt-5 pb-5">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i style="font-size:1.65rem;"class="fas fa-dollar-sign"></i></span>
                    </div>
                    <input type="number" step="0.25" autocomplete="off"placeholder="Price for the event..."class="text-center form-control" name="event[price]" required value="<%= event.price %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update my Event!</button>
                </div>
            </form>
            <a href="/events/<%=event.id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
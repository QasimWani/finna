<% include ../partials/header %>

<div class="mt-5 container">
    <div class="row">
        <div style="width: 72%; margin: 5px auto;">
            <h1 class="text-center mb-3"><%= post.title %></h1>
            <form action="/feed/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="text-center form-control" name="post[title]" placeholder="title of your post..." autocomplete="off" value="<%= post.title %>" required>
                </div>

                <div class="form-group">
                    <textarea class="form-control border-info " rows="13" cols="49"name="post[description]" placeholder="Description of your Post..."><%= post.description %></textarea> 
                </div>
                
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-link"></i></span>
                    </div>
                    <input type="text" autocomplete="off"placeholder="(optional) image url..."class="text-center form-control" name="post[image]" value="<%= post.image %>">
                </div>
               
                    <div class="text-center">
                        <img class="mt-4 mb-4 rounded img-fluid" width="50%"src="<%=post.image%>">
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update my Post!</button>
                </div>
            </form>
            <a href="/feed/<%=post.id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>